<div class="row">
    <div class="booyah-box col-xs-10 col-xs-offset-1">
        <div class="row">
            <h1><%= current_ride.legs.first.waypoint_start.waypoint_name %> -> <%= current_ride.legs.last.waypoint_finish.waypoint_name %></h1>
        </div>
        <br />
        <div class="row">
            <h3>Waypoints</h3>
            <%= simple_form_for current_ride, :url => driver_ride_path(current_ride), :method => :put do |f| %>
            <% current_ride.legs.each do |w| %>
                <p><%= w.waypoint_start.waypoint_name %> -> <%= w.waypoint_finish.waypoint_name %></p>
                <%= f.simple_fields_for :legs, w do |l| %>
                    <%= l.input :leg_cost %>
                    <%= l.input :waypoint_start_id, as: :hidden %>
                    <%= l.input :waypoint_finish_id, as: :hidden %>
                    <%= l.input :leg_seats, as: :hidden %>
                    <br />
                <% end %>
            <% end %>
            <%= f.submit %>
            <% end %>
        </div>
    </div>
</div>