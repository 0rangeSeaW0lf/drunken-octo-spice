<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Offer a ride on your next long journey</h1>
  <%= simple_form_for @ride, :url => driver_rides_path do |f| %>
      <%= f.simple_fields_for :waypoints do |waypoint| %>
        <%= render :partial => 'waypoint_fields', :f => waypoint %>
      <% end %>
    <div class="links">
      <%= link_to_add_association 'Add more cities on your route', f, :waypoints %>
    </div>
    <br />
    <%= f.input :seats, collection: 1..9, :include_blank => false %>
    <%= f.input :details, as: :text %>
    <%= f.input :luggage_size, collection: ["No room/see comment","Small", "Medium", "Big"], :include_blank => false %>
    <br /><br />
    <%= f.submit "Create", :class => 'btn btn-primary' %>
    <br />
  <% end %>
</div>