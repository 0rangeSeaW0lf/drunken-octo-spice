<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Offer a ride on your next long journey</h1>
  <%= simple_form_for @ride, :url => driver_rides_path do |f| %>
      <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :cost %>
        <br />
        <%= f.submit "Create", :class => 'btn btn-primary' %>
        <br />
  <% end %>
</div>